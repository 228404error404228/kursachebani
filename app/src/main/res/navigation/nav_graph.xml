<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/nav_routes"
        android:name="com.example.kurs.ui.RoutesFragment"
        android:label="Маршруты" />

    <fragment
        android:id="@+id/nav_places"
        android:name="com.example.kurs.ui.PlacesFragment"
        android:label="Достопримечательности" />

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.kurs.ui.ProfileFragment"
        android:label="Профиль" />

    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.kurs.auth.AuthFragment"
        android:label="Авторизация"
        tools:layout="@layout/auth_fragment" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.kurs.ui.ProfileFragment"
        android:label="Профиль"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.kurs.ui.SearchFragment"
        android:label="Поиск адреса"
        tools:layout="@layout/fragment_search" />

    <action
        android:id="@+id/action_authFragment_to_profileFragment"
        app:destination="@id/profileFragment" />
    <action
        android:id="@+id/action_profileFragment_to_authFragment"
        app:destination="@id/authFragment" />
</navigation>
